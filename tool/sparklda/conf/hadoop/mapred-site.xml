<!-- Put site-specific property overrides in this file. -->

<configuration>
 <property>
  <name>mapreduce.framework.name</name>
  <value>yarn</value>
 </property>
 <property>
  <name>yarn.app.mapreduce.am.staging-dir</name>
  <value>/user</value>
 </property>
 <property>
  <name>mapreduce.map.memory.mb</name>
  <value>26624</value>
 </property>
 <property>
  <name>mapreduce.reduce.memory.mb</name>
  <value>26624</value>
 </property>
 <property>
  <name>mapreduce.map.java.opts</name>
  <value>-Xmx21299m</value>
 </property>
 <property>
  <name>mapreduce.reduce.java.opts</name>
  <value>-Xmx21299m</value>
 </property>
 <property>
  <name>mapreduce.map.collective.memory.mb</name>
  <value>60000</value>
 </property>
 <property>
  <name>mapreduce.map.collective.java.opts</name>
  <value>-Xmx60000m -Xms60000m</value>
 </property>
 <property>
  <name>mapreduce.jobhistory.cleaner.interval-ms</name>
  <value>864000000</value>
 </property>
 <property>
   <name>mapreduce.task.timeout</name>
   <value>360000000</value>
   <description>The number of milliseconds before a task will be
    terminated if it neither reads an input, writes an output, nor
    updates its status string.  A value of 0 disables the timeout.
   </description>
 </property>
 <property>
  <name>mapreduce.job.userlog.retain.hours</name>
  <value>24</value>
 </property>
</configuration>
